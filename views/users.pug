head
  link(rel='stylesheet' href='/css/style.css')
include _header
.productpage
  section.search__Container
    .header__container
      input#searchBox(type="text" placeholder="Search Name")
      button.btn.searchUser Search 
  section.product__container
    for user in users 
      .product__card
        .product__card--footer
          ul
            li Id: #{user._id}
            li Name: #{user.firstName}  #{user.lastName}
            li Email: #{user.email}
            li Number: #{user.phoneNumber}
            li Gender: #{user.gender}
        a.product__card--link(href=`/userDetails/${user._id}`) See Details
script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js')
script(src='/js/logout.js')
script(src='/js/searchUser.js')
script(src='/js/alert.js')